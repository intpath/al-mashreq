<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="payment_type_form" model="ir.ui.view">
            <field name="name">payment_type.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="recieve_type" />
                    <field name="bond_number" />
                    <field name="bond_type" />
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="free_text" attrs="{'invisible': [('payment_type', '!=', 'outbound')]}"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_tree" model="ir.ui.view">
            <field name="name">account_move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="bond_number" />
                    <field name="bond_type" />
                </xpath>
            </field>
        </record>

        <record id="account_account_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reconcile']" position="after">
                    <field name="exclude_from_payment_spending_report" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <record id="student_account_payment_tree" model="ir.ui.view">
            <field name="name">student_account_payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="department" />
                    <field name="stage" />
                    <field name="category" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>